<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutomobileProject</title>

    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="~/css/fontAwesome.css">
    <link rel="stylesheet" href="~/css/hero-slider.css">
    <link rel="stylesheet" href="~/css/owl-carousel.css">
    <link rel="stylesheet" href="~/css/style.css">

    <link href="https://fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700,800,900" rel="stylesheet">

    <script src="~/js/vendor/modernizr-2.8.3-respond-1.4.2.min.js"></script>

</head>
<body>
    <div class="wrap">
        <header id="header">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <nav id="primary-nav" class="dropdown cf">
                            <div style="float: left; position:relative;">
                                <a href="/">
                                    <img src="~/Logo/logo.png" alt="Venue Logo">
                                </a>
                            </div>
                            <ul class="dropdown menu">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Cars" asp-action="AllCars">Cars</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Motorcycles" asp-action="AllMotorcycles">Motorcycles</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="ElectricScooters" asp-action="AllElectricScooters">EScooters</a>
                                </li>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>
                                        <a href="#">Add Offer</a>
                                        <ul class="sub-menu">
                                            <li>
                                                <a asp-controller="Offer" asp-action="AddCar">Car</a>
                                            </li>

                                            <li>
                                                <a asp-controller="Offer" asp-action="AddMotorcycle">Motorcycle</a>
                                            </li>

                                            <li>
                                                <a asp-controller="Offer" asp-action="AddElectricScooter">Electric Scooter</a>
                                            </li>
                                        </ul>
                                    </li>

                                    <li>
                                        <a href="#">My Offers</a>
                                        <ul class="sub-menu">
                                            <li>
                                                <a asp-controller="Cars" asp-action="UserCars">Cars</a>
                                            </li>
                                            <li>
                                                <a asp-controller="Motorcycles" asp-action="UserMotorcycles">Motorcycles</a>
                                            </li>
                                            <li>
                                                <a asp-controller="ElectricScooters" asp-action="UserElectricScooters">EScooters</a>
                                            </li>
                                        </ul>
                                    </li>
                                }

                                <partial name="_LoginPartial" />
                            </ul>
                        </nav><!-- / #primary-nav -->
                    </div>
                </div>
            </div>
        </header>
    </div>

    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <div class="about-veno">
                        <div class="logo">
                            <img src="~/Logo/footer_logo.png" alt="Venue Logo">
                        </div>
                        <p>Feel free to contact me on the social medias.</p>
                        <ul class="social-icons">
                            <li>
                                <a href="https://www.facebook.com/nikolaystoyanov00"><i class="fa fa-facebook"></i></a>
                                <a href="https://www.linkedin.com/in/nikolay-stoyanov-706491190/"><i class="fa fa-linkedin"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="useful-links">
                        <div class="footer-heading">
                            <h4>Useful Links</h4>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <ul>
                                    <li><a href="/"><i class="fa fa-stop"></i>Home</a></li>
                                    <li><a href="/Identity/Account/Manage"><i class="fa fa-stop"></i>Profile</a></li>
                                    <li><a href="/Cars/AllCars"><i class="fa fa-stop"></i>Cars</a></li>
                                    <li><a href="/Motorcycles/AllMotorcycles"><i class="fa fa-stop"></i>Motorcycles</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="contact-info">
                        <div class="footer-heading">
                            <h4>Contact Information</h4>
                        </div>
                        <p><i class="fa fa-map-marker"></i> Sofia, Bulgaria</p>
                        <ul>
                            <li><span>Phone:</span><a href="#">+359 88 99 1010</a></li>
                            <li><span>Email:</span><a href="#">nikolai_kula1@abv.bg</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js" type="text/javascript"></script>
    <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\/script>')</script>

    <script src="~/js/vendor/bootstrap.min.js"></script>

    <script src="~/js/datepicker.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/main.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
